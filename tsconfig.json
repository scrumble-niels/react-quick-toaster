{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "strict": false,
    "outDir": "./lib",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "strictNullChecks": true,
    "lib": ["es5", "es2015", "es2016", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
